    product.setPrice(1);

    BufferedImage img = ImageIO.read(new File("src/main/images/products/Basketball/wilsonball.jpg"));
    ImageIO.write(img, "jpg", baos);

    bytes = baos.toByteArray();
    product.setImage(bytes);
    productService.create(product);

